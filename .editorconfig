# EditorConfig helps maintain consistent coding styles
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{js,jsx,ts,tsx,vue,json,yml,yaml,css,scss,html}]
indent_style = space
indent_size = 2

[*.{sh,bash}]
indent_style = space
indent_size = 2